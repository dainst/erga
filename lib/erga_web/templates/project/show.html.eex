<div><%= link "Back", to: Routes.project_path(@conn, :index) %> | <%= link "Edit", to: Routes.project_path(@conn, :edit, @project) %> </div>

<h1><%= @project.title %> (<%= @project.project_code %>)</h1>

<p><%= @project.description %></p>

<h2>Stakeholders</h2>
<%= for stakeholder <- @project.stakeholders do %>
  <div><%= stakeholder.person.title <> " " <> stakeholder.person.firstname <> " " <> stakeholder.person.lastname %></div>
  <div><small><%= stakeholder.role %> | <%= stakeholder.external_id %></small></div>
<% end %>

<h2>Linked resources:</h2>
<%= for resource <- @project.linked_resources do %>
  <div><%= resource.label %></div>
  <div><small><%= resource.description %>: <%= resource.linked_id %> | <%= resource.linked_system %></small></div>
<% end %>

<h2>Images:</h2>
<%= for image <- @project.images do %>
<div>
  <%= image.label %> <%= if image.primary do "(Primary)" end %>
  <%= img_tag("/media/#{image.path}", class: "image") %>
</div>
<% end %>

<div><%= link "Back", to: Routes.project_path(@conn, :index) %> | <%= link "Edit", to: Routes.project_path(@conn, :edit, @project) %> </div>
